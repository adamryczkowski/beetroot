enable_language(CXX)
find_package(Boost)
if(NOT Boost_FOUND)
	message(FATAL_ERROR "BOOST NOT FOUND")
endif()
set(BOOST_VERSION_STRING "${Boost_MAJOR_VERSION}.${Boost_MINOR_VERSION}.${Boost_SUBMINOR_VERSION}")
if("${BOOST_VERSION_STRING}" STREQUAL "..")
	set(BOOST_VERSION_STRING "${Boost_VERSION}")
endif()
#message(FATAL_ERROR "BOOST_VERSION_STRING=${BOOST_VERSION_STRING} CMAKE_VERSION=${CMAKE_VERSION}")
if("${BOOST_VERSION_STRING}" VERSION_GREATER_EQUAL "1.70.0" AND "${CMAKE_VERSION}" VERSION_LESS "3.14.4")
	message(FATAL_ERROR "For Boost ${BOOST_VERSION_STRING} you need CMake at least 3.14.4")
endif()
set(BOOST_VERSION_STRING "BOOST${BOOST_VERSION_STRING}")
